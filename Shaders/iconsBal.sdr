// Balance mod
// Add missing icons for our added effects

//
// Monster Enhancements
//

// For incredible cold resistance (ice elemental)
Textures/Icons/MonsterEnhancements/protectionCold4
{
	cull none
	useMipMaps 0

	{
		texture Textures/Icons/Skills/protectionCold.tga
		clamp clamp
	}

	{
		texture Textures/Icons/MonsterEnhancements/incredibleVersion.tga
		blendFunc SrcAlpha OneMinusSrcAlpha
		clamp clamp
	}
}

